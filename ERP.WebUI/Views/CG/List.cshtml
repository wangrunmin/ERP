@using ERP.WebUI.HtmlHelpers
@model ERP.WebUI.Models.CGListViewModel

@{
      ViewBag.Title = "List";
}
<div class="panel panel-default">
  @*头部*@
  <div class="panel-heading" style="overflow:hidden">
    <div class="pull-left">
      <h3>采购系统</h3>
    </div>
    <div class="btn-group pull-right">
      @Html.ActionLink("添加订单", "Create", null, new { @class = "btn btn-default" })
    </div>
  </div>
  @*主体*@
  <div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
      <tr>
        <th class="text-center">订单号</th>
        <th class="text-center">供应商</th>
        <th class="text-center">经办人</th>
        <th class="text-center">总额</th>
        <th class="text-center">时间</th>
      </tr>
      @foreach (var p in Model.CGs)
      {
      <tr ondblclick="doubleClick(this);">
        <td class="text-center">@Html.ActionLink(p.iID.ToString(), "Read", new { p.iID })</td>
        <td class="text-center">@p.SupplierName</td>
        <td class="text-center">@p.HumanName</td>
        <td class="text-center">@p.Total</td>
        <td class="text-center">@p.Time</td>
      </tr>
      }
    </table>
    @*分页按钮*@
    <div class="btn-group pull-right">
      @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
    </div>
  </div>
  @*尾部*@
  <div class="panel-footer">
    双击或者点击蓝色链接查看详细信息
  </div>
</div>
